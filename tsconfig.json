{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noLib": false,
    "noImplicitAny": true,
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "target": "es2015",
    "lib": [
      "dom",
      "es2016"
    ]
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue",
  ],
}
