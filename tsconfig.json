{
  "compilerOptions": {
    // "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    // "noLib": false,
    // "noImplicitAny": true,
    "strictNullChecks": false,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "target": "es2015",
    "lib": [
      "dom",
      "es2016",
      "es2020",
      "WebWorker"
    ],
    "baseUrl": "./src",
    "paths": {
      "src/*": ["./*"],
      "components/*": ["./components/*"],
      "file-modules/*": ["./file-modules/*"],
      "lib/*": ["./lib/*"],
      "pages/*": ["./pages/*"],
      "types/*": ["./types/*"],
    }
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue",
  ],
}
